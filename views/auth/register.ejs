<% if (message.errors) { %>
<% message.errors.forEach(function(error){ %>
<div class="alert alert-danger" role="alert">
  <%= error  %>
</div>
<% }); %>
<% } %>

<form class="js-validation-signin" action="/register?_method=PUT" method="post">
  <div class="block block-themed block-rounded block-shadow">
    <div class="block-header bg-gd-dusk">
      <h3 class="block-title">ورود</h3>
      <div class="block-options">
        <button type="button" class="btn-block-option">
          <i class="si si-wrench"></i>
        </button>
      </div>
    </div>
    <div class="block-content">
      <div class="form-group row">
        <div class="col-12">
          <label for="login-username">نام</label>
          <input type="text" class="form-control" id="login-username" name="name" value="<%= app.old(old , 'name')  %>" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <label for="login-username">ایمیل</label>
          <input type="text" class="form-control" id="login-username" name="email" value="<%= app.old(old , 'email')  %>" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <label for="login-password">رمز عبور</label>
          <input type="password" class="form-control" id="login-password" name="password" <%= app.old(old , 'password')  %>" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <label for="login-password">تکرار رمز عبور </label>
          <input type="password" class="form-control" id="login-password" name="password_confirm" />
        </div>
      </div>
      <div class="form-group row mb-0">

        <div class="col-sm-6 ">
          <button type="submit" class="btn btn-alt-primary">

            ورود <i class="fa fa-arrow-left mr-5"></i>


          </button>
          <a class="link-effect text-muted mr-10 mb-5 d-inline-block" href="/login">
            <i class="fa fa-plus mr-5"></i> حساب دارم!
          </a>
        </div>
      </div>
    </div>
    <div class="block-content bg-body-light">
      <div class="form-group text-center">


      </div>
    </div>
  </div>
</form>